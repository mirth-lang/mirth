    { PRIM_CORE_PANIC ->
        drop
        C99RT_STR dup pop-value! consume-as
        c99-line("do_panic(" put put ");" put)
        +stack(rdrop +SNil)
        False reachable!
    }
    { PRIM_CORE_RUN ->
        dup args empty? else(token "expected no arguments to prim-core-run" +mirth:emit-fatal-error!) drop
        C99RT_VAL pop-value! run-value!
    }

