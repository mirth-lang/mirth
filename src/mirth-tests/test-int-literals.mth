module(mirth-tests.test-int-literals)
import(std.prelude)
import(posix.posix)

def(expect==!, Str Int Int --,
    dup2 == if(
        drop3,

        "failed: " print!
        dip2(print!)
        " (expected: " print! print!
        ", got: " print! print!
        ")" print-ln!
    ))

def(int-literals-test, --,
    "0o666 438" 0o666 438 expect==!

    "0x0"   0x0 0 expect==!
    "0x00"  0x00 0 expect==!
    "0x000" 0x000 0 expect==!

    "0x1"   0x1 1 expect==!
    "0x10"  0x10 16 expect==!
    "0x100" 0x100 256 expect==!

    "0o0"   0o0 0 expect==!
    "0o00"  0o00 0 expect==!
    "0o000" 0o000 0 expect==!

    "0o1"   0o1 1 expect==!
    "0o10"  0o10 8 expect==!
    "0o100" 0o100 64 expect==!
)

def(main, +World -- +World, int-literals-test)
