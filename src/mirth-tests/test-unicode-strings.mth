module(mirth-tests.test-unicode-strings)
import(std.prelude)
import(std.str)
import(std.byte)
import(std.list)
import(posix.posix)

def(display-str!, Str --,
    "\"" print! dup print! "\"" print-ln!
    "num-bytes: " print! dup num-bytes show print-ln!
    "bytes:" print! dup bytes-for(" " print! >Int print!) line-print!
    drop "----------" print-ln!)

def(main, --,
    "----------" print-ln!
    "" display-str!
    "Olá mundo!" display-str!
    "こんにちは" display-str!
    "👋🌎🌍🌏" display-str!
    "🤷‍♀️" display-str!)

