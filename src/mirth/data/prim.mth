    PRIM_I16_SET "prim-i16-set" def-prim!
    PRIM_I32_GET "prim-i32-get" def-prim!
    PRIM_I32_SET "prim-i32-set" def-prim!
    PRIM_I64_GET "prim-i64-get" def-prim!
    PRIM_I64_SET "prim-i64-set" def-prim!

