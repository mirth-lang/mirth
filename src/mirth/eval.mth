# Assert stack arity of a primitive. If the
# arity would result in underflow/overflow,
# emits a fatal error.
def(arity-check!, Token Size Size -- Token,
    dip(dip(vstack-len@))
    dip(dup2 <) swap if(
        drop drop2 "Stack underflow." emit-fatal-error! 0,
        dip(-) + VSTACK_SIZE > if(
            "Stack overflow." emit-fatal-error! 0,
            id
        )
    ))
