def(U16->TokenRow, U16 -- TokenRow, cast)
def(Int->TokenRow, Int -- TokenRow, Int->U16 U16->TokenRow)
def(token-row&, Token -- Ptr, Token->Int |TokenRow| * TOKEN_ROW +)
def(token-row@, Token -- TokenRow, token-row& u16@ U16->TokenRow)
def(token-row!, TokenRow Token --, dip(TokenRow->U16) token-row& u16!)
