nominal(TokenCol, U16)
def(|TokenCol|, Size, 2)
MAX_TOKENS u16s def-static-buffer(TOKEN_COL)
def(TokenCol->U16, TokenCol -- U16, cast)
def(TokenCol->Int, TokenCol -- Int, TokenCol->U16 U16->Int)
def(U16->TokenCol, U16 -- TokenCol, cast)
def(Int->TokenCol, Int -- TokenCol, Int->U16 U16->TokenCol)
