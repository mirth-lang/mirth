data(Comparison, LT, EQ, GT)
def(comparison-is-eq, Comparison -- Bool, LT -> F, EQ -> T, GT -> F)
def(comparison-is-lt, Comparison -- Bool, LT -> T, EQ -> F, GT -> F)
