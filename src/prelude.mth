def(comparison-is-gt, Comparison -- Bool, LT -> F, EQ -> F, GT -> T)
def(comparison-is-ge, Comparison -- Bool, LT -> F, EQ -> T, GT -> T)
def(comparison-is-ne, Comparison -- Bool, LT -> T, EQ -> F, GT -> T)

alias(int==, prim-int-eq)
alias(int<, prim-int-lt)
def(int>, Int Int -- Bool, swap int<)
def(int>=, Int Int -- Bool, int< not)
def(int<=, Int Int -- Bool, swap int< not)
def(int<>, Int Int -- Bool, int== not)
def(int-cmp, Int Int -- Comparison, dup2 int== if(drop2 EQ, int< if(LT, GT)))
def(int-max, Int Int -- Int, dup2 int< if(nip, drop))
def(int-min, Int Int -- Int, dup2 int< if(drop, nip))
def(int-in-range, Int Int Int -- Bool, dip(dip(dup) int>= swap) int<= &&)

def(str-cmp, Str Str -- Comparison, prim-str-cmp 0 int-cmp)
def(str==, Str Str -- Bool, str-cmp comparison-is-eq)
def(str<=, Str Str -- Bool, str-cmp comparison-is-le)
def(str< , Str Str -- Bool, str-cmp comparison-is-lt)
def(str>=, Str Str -- Bool, str-cmp comparison-is-ge)
def(str> , Str Str -- Bool, str-cmp comparison-is-gt)
def(str<>, Str Str -- Bool, str-cmp comparison-is-ne)
def(str-max, Str Str -- Str, dup2 str< if(nip, drop))
def(str-min, Str Str -- Str, dup2 str< if(drop, nip))

