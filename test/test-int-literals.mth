module(mirth-tests.test-int-literals)
import(std.prelude)
import(std.world)
import(std.str)

def(expect==!, +World Str Int Int -- +World,
    dup2 == if(
        drop3,

        print(
            "failed: " ; rotl ;
            " (expected: " ; show;
            " , got: " ; show;
            ")" ;
        )
    ))

def(main, +World -- +World,
    "0o666 438" 0o666 438 expect==!

    "0x0"   0x0 0 expect==!
    "0x00"  0x00 0 expect==!
    "0x000" 0x000 0 expect==!

    "0x1"   0x1 1 expect==!
    "0x10"  0x10 16 expect==!
    "0x100" 0x100 256 expect==!

    "+0x1"   +0x1 1 expect==!
    "+0x10"  +0x10 16 expect==!
    "+0x100" +0x100 256 expect==!

    "-0x1"   -0x1 -1 expect==!
    "-0x10"  -0x10 -16 expect==!
    "-0x100" -0x100 -256 expect==!

    "0o0"   0o0 0 expect==!
    "0o00"  0o00 0 expect==!
    "0o000" 0o000 0 expect==!

    "0o1"   0o1 1 expect==!
    "0o10"  0o10 8 expect==!
    "0o100" 0o100 64 expect==!

    "+0o1"   +0o1 1 expect==!
    "+0o10"  +0o10 8 expect==!
    "+0o100" +0o100 64 expect==!

    "-0o1"   -0o1 -1 expect==!
    "-0o10"  -0o10 -8 expect==!
    "-0o100" -0o100 -64 expect==!
)
