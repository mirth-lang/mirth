def(swap-int-pack, [a b] -- [b a], unpack2 swap pack2)
def(sub-int-pack, [Int Int] -- Int, unpack2 -)
def(main, --,
    mk-int-pack ?? unpack2 ?? pack2 ?? unpack2 ?? pack2 ?? unpack2 ?? pack2
    dup unpack2 ?? 20 !!= 10 !!=
    swap-int-pack
    dup unpack2 ?? 10 !!= 20 !!=
    swap-int-pack
    dup unpack2 ?? 20 !!= 10 !!=
    sub-int-pack
    -10 !!=)
