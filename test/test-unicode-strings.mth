module(mirth-tests.test-unicode-strings)
import(std.prelude)
import(std.str)
import(std.byte)
import(std.list)
import(std.world)

def(hrule, +World -- +World,
    "----------" print)

def(display-str!, Str +World -- +World,
    print(dup ;)
    print(dup show;)
    print("num-bytes: " ; dup num-bytes >Int show;)
    print("bytes:" ; dup bytes-for(" "; >Int show;))
    drop hrule)

def(main, +World -- +World,
    hrule
    "" display-str!
    "Olá mundo!" display-str!
    "Déad Disco" display-str!
    "こんにちは" display-str!
    "👋🌎🌍🌏" display-str!
    "🤷‍♀️" display-str!)

