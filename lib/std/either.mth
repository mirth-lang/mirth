module(std.either)

import(std.prelude)
import(std.maybe)

data(Either(a,b), Left -> a, Right -> b)
def(Either.left?, Either(a,b) -- Maybe(a), Left -> Some, Right -> drop None)
def(Either.right?, Either(a,b) -- Maybe(b), Left -> drop None, Right -> Some)

def(Either.either(f,g), (*x a -- *y, *x b -- *y) *x Either(a,b) -- *y,
    Left -> f,
    Right -> g)
